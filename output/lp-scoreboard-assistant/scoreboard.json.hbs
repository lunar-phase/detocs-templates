---
{
  "tabIdMappings": {
    "uni": "unist",
    "kof13": "kof",
    "bbcf": "bb"
  }
}
---
{{#*inline "escapeName"}}
{{~escapeJson (escapeString . "||" "|")}}
{{~/inline}}
{{#*inline "player"}}
{{~#if person.alias}}{{> escapeName person.alias}}{{else}}{{> escapeName person.handle}}{{/if}}
{{~#if comment}} ({{> escapeName comment}}){{/if}}
{{~#if inLosers}} [L]{{/if}}
{{~#if person.prefix}} || {{> escapeName person.prefix}}{{/if}}
{{~/inline}}
{
  {{#with (lookup userData.tabIdMappings state.game.id) as | mapping |}}
  "tabID": "{{mapping}}",
  {{else}}
  "tabID": "{{state.game.id}}",
  {{/with}}
  "player1": "{{> player state.players.[0]}}",
  "player2": "{{> player state.players.[1]}}",
  "score1": "{{escapeJson state.players.[0].score}}",
  "score2": "{{escapeJson state.players.[1].score}}",
  "match": "{{escapeJson state.match.name}}",
  "game": "{{escapeJson state.tournament}}"
}
